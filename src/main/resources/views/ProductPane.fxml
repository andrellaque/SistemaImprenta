<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="rootPane" prefHeight="560.0" prefWidth="1010.0" styleClass="root" stylesheets="@css/styleTest.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.utp.sistemaimprenta.controller.ProductController">

    <children>

        <Pane layoutX="33.0" layoutY="90.0" prefHeight="420.0" prefWidth="951.0" styleClass="panel">
            <children>

                <TextField fx:id="txtBuscar" layoutX="63.0" layoutY="28.0" prefHeight="30.0" prefWidth="450.0" promptText="Buscar producto..." styleClass="text-field" />

                <ImageView fx:id="btnBuscar" fitHeight="30.0" fitWidth="31.0" layoutX="33.0" layoutY="27.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/icons/lupa.png" />
                    </image>
                </ImageView>

                <ComboBox fx:id="cmbFiltro" layoutX="521.0" layoutY="32.0" prefHeight="18.0" prefWidth="104.0" promptText="Filtrar por" />

                <TableView fx:id="tablaProductos" layoutX="33.0" layoutY="80.0" prefHeight="251.0" prefWidth="888.0">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="78.0" text="ID" />
                        <TableColumn fx:id="colNombre" prefWidth="132.0" text="Nombre" />
                        <TableColumn fx:id="colDescripcion" prefWidth="281.0" text="Descripción" />
                        <TableColumn fx:id="colTipo" prefWidth="119.0" text="Tipo" />
                        <TableColumn fx:id="colPrecio" prefWidth="131.0" text="Precio Base" />
                        <TableColumn fx:id="colEstado" prefWidth="146.0" text="Estado" />
                    </columns>
                </TableView>

                <Button fx:id="btnExcel" layoutX="224.0" layoutY="364.0" prefHeight="31.0" prefWidth="137.0" styleClass="excel" text="Exportar EXCEL" />
                <Button fx:id="btnCsv" layoutX="371.0" layoutY="364.0" prefHeight="31.0" prefWidth="137.0" styleClass="csv" text="Exportar CSV" />
                <Button fx:id="btnActualizar" layoutX="518.0" layoutY="364.0" prefHeight="31.0" prefWidth="137.0" styleClass="button" text="Actualizar" />
                <Button fx:id="btnEliminar" layoutX="665.0" layoutY="364.0" prefHeight="31.0" prefWidth="137.0" styleClass="delete" text="Eliminar" />

                <Label fx:id="lblError" alignment="CENTER" layoutX="33.0" layoutY="339.0" prefHeight="15.0" prefWidth="888.0" styleClass="label-neutral" stylesheets="@css/style.css" text="dsa" />

            </children>
        </Pane>

        <Label fx:id="lblTitulo" layoutX="108.0" layoutY="34.0" prefHeight="34.0" prefWidth="431.0" styleClass="title" text="Gestión de Productos" />

        <Pane fx:id="paneIcon" layoutX="40.0" layoutY="27.0" prefHeight="50.0" prefWidth="56.0" styleClass="panel2">
            <children>
                <ImageView fx:id="imgIcon" fitHeight="44.0" fitWidth="49.0" layoutX="7.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/icons/product.png" />
                    </image>
                </ImageView>
            </children>
        </Pane>

        <Button fx:id="btnNuevo" layoutX="786.0" layoutY="37.0" prefHeight="32.0" prefWidth="154.0" styleClass="button" text="Nuevo Producto" />

        <Pane fx:id="paneNuevoProducto" layoutX="0.0" layoutY="0.0" prefHeight="560.0" prefWidth="1010.0" style="-fx-background-color: rgba(0,0,0,0.5);" visible="true">

            <Pane layoutX="150.0" layoutY="60.0" prefHeight="440.0" prefWidth="710.0" styleClass="modal-panel">
                <children>
                    <Label fx:id="lblTituloModal" alignment="CENTER" layoutX="222.0" layoutY="27.0" styleClass="title" text="Producto" />
                    <TextField fx:id="txtNombre" layoutX="155.0" layoutY="83.0" prefWidth="400.0" promptText="Ingresar nombre" styleClass="text-field" />
                    <TextArea fx:id="txtDescripcion" layoutX="155.0" layoutY="124.0" prefHeight="60.0" prefWidth="400.0" promptText="Descripcion del producto..." styleClass="text-area" />
                    <ComboBox fx:id="cmbTipo" layoutX="155.0" layoutY="193.0" prefWidth="400.0" promptText="Seleccionar tipo" styleClass="text-field" />
                    <TextField fx:id="txtPrecioBase" layoutX="155.0" layoutY="233.0" prefWidth="400.0" promptText="Ingresar precio base" styleClass="text-field" />
                    <ComboBox fx:id="cmbEstado" layoutX="155.0" layoutY="273.0" prefWidth="400.0" promptText="Seleccionar estado" styleClass="text-field" />

                    <Button fx:id="btnGuardar" layoutX="240.0" layoutY="359.0" prefWidth="100.0" styleClass="button" text="Guardar" />
                    <Button fx:id="btnCancelar" layoutX="370.0" layoutY="359.0" prefWidth="100.0" styleClass="delete" text="Cancelar" />
               <Label fx:id="lblError1" alignment="CENTER" layoutX="155.0" layoutY="324.0" prefHeight="23.0" prefWidth="400.0" styleClass="label-neutral" stylesheets="@css/style.css" text="" />
               <Button fx:id="btnActualizarModal" layoutX="238.0" layoutY="359.0" prefHeight="33.0" prefWidth="104.0" styleClass="button" text="Actualizar" />
                </children>
            </Pane>
        </Pane>

    </children>
</Pane>
